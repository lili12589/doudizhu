<?xml version="1.0" encoding="utf-8"?>
<!-- 右家头像布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rgpl_layout" android:orientation="horizontal"
	android:layout_width="160dp" android:layout_height="40dp"
	android:gravity="right" >

	<!-- 右家tv -->
	<TextView android:id="@+id/rgpl_tv" android:layout_height="39dp"
		android:layout_width="112dp" android:text="" android:gravity="right|center"
		android:textColor="#c800c8" android:textSize="19dip"
		android:textStyle="bold" >
	</TextView>
	<!-- 用于存放右家头像 -->
	<ImageView android:id="@+id/rgpl_im" android:src="@drawable/pl2"
		android:layout_gravity="right" android:layout_width="40dp"
		android:layout_height="42dp">
	</ImageView>
</LinearLayout>
